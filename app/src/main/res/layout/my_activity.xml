                    android:id="@+id/activity2View2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无活动记录"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Juxin2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/activity2View3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.71" />

                <TextView
                    android:id="@+id/activity2View3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无活动记录"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Juxin2"
                    app:layout_constraintHorizontal_bias="0.003"
                    app:layout_constraintStart_toStartOf="@+id/activity2View1"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/activity3Layout">

                <ImageView
                    android:id="@+id/Juxin3"
                    android:layout_width="match_parent"
